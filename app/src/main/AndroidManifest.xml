<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alber.prueba10">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/txt_favoritos"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AnimeItem"
            android:label="@string/txt_ficha"
            android:theme="@style/Tema" />
        <activity
            android:name=".activity.MangaActivity"
            android:label="@string/txt_favoritos"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.CorreoActivity" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activity.Buscador" />

        <activity
            android:name=".activity.Buscador"
            android:label="@string/title_activity_buscador"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.TopAnimeActivity"
            android:label="@string/txt_ranking"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.EmisionActivity"
            android:label="@string/txt_emi"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ProxActivity"
            android:label="@string/txt_prox"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SeassonActivity"
            android:label="@string/txt_temporada"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MangaItem"
            android:label="@string/txt_ficha"
            android:theme="@style/Tema" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activity.Buscador" />

        <activity
            android:name=".activity.BuscadorManga"
            android:label="@string/title_activity_buscador"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.TopMangaActivity"
            android:label="@string/txt_ranman"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PubliActivity"
            android:label="@string/txt_publicando"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.GaleriaManga"
            android:label="@string/txt_galeria"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activity.DetalleActivity"
            android:label="@string/txt_captura"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>