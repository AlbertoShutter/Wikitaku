<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    card_view:cardBackgroundColor="@color/card"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imagen"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="Large Text"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/nombre"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:text="Small Text"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:typeface="sans" />

        <View
            android:id="@+id/linea2"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_below="@+id/info"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imagen"
            android:background="#ffd5d5d5" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/linea2"
            android:id="@+id/LinearLayout01"
            android:layout_toRightOf="@id/imagen"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linea2"
                android:layout_gravity="center"
                android:layout_alignStart="@+id/episodios"
                android:layout_below="@+id/linea2"
                android:paddingLeft="10dp"
                android:paddingTop="18dp"
                android:text="@string/txt_capitulos"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/capitulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/linea2"
                android:layout_below="@+id/textView3"
                android:gravity="top|center"
                android:padding="2dp"
                android:paddingBottom="18dp"
                android:text="Small Text1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/linea2"
            android:layout_toRightOf="@id/LinearLayout01"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linea2"
                android:layout_alignStart="@+id/episodios"
                android:layout_below="@+id/linea2"
                android:paddingLeft="10dp"
                android:paddingTop="18dp"
                android:layout_gravity="center"
                android:text="@string/txt_volumenes"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/volumenes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/linea2"
                android:layout_below="@+id/textView3"
                android:gravity="top|center"
                android:padding="2dp"
                android:paddingBottom="18dp"
                android:text="Small Text2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            android:id="@+id/nota"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/estilo"
            android:gravity="center"
            android:padding="5dp"
            android:text="10"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>